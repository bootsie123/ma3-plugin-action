{
  "name": "ma3-plugin-action",
  "description": "Auto generates the necessary XML files for grandMA3 plugins",
  "version": "0.0.1",
  "author": "bootsie123",
  "private": true,
  "homepage": "https://github.com/bootsie123/ma3-plugin-action",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bootsie123/ma3-plugin-action.git"
  },
  "bugs": {
    "url": "https://github.com/bootsie123/ma3-plugin-action/issues"
  },
  "keywords": [
    "actions",
    "node",
    "ma3"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "npx jest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml && npx markdownlint . -c ./.github/linters/.markdown-lint.yml",
    "package": "npx ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "npx jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package",
    "start": "npm run package && act -j 'test-action'"
  },
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/artifact": "^2.1.7",
    "@actions/core": "^1.10.1",
    "@xmldom/xmldom": "^0.8.10",
    "xml-formatter": "^3.6.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.8",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^5.0.1",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "markdownlint-cli": "^0.41.0",
    "prettier": "^3.3.2",
    "prettier-eslint": "^16.3.0",
    "ts-jest": "^29.1.5",
    "typescript": "^5.5.2"
  }
}
